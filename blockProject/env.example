# Blockchain Supply Chain Application Environment Configuration

# Application Environment
NODE_ENV=development
PORT=3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/supplychain
REDIS_URL=redis://localhost:6379

# Blockchain Configuration
BLOCKCHAIN_RPC_URL=http://localhost:8545
PRIVATE_KEY=your-private-key-here
SUPPLY_CHAIN_CONTRACT_ADDRESS=0x...
PRICING_CONTRACT_ADDRESS=0x...

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
QR_SIGNATURE_SECRET=your-qr-signature-secret-change-this-in-production

# API Configuration
API_BASE_URL=http://localhost:3000
APP_BASE_URL=http://localhost:3001

# IPFS Configuration
IPFS_URL=http://localhost:5001
IPFS_GATEWAY_URL=http://localhost:8080

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SMS Configuration (Optional)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Monitoring Configuration
LOG_LEVEL=info
ENABLE_METRICS=true
